{
  "name": "Safari Search Demo",
  "description": "Opens Safari and performs a web search",
  "version": "1.0.0",
  "commands": [
    {
      "command": "see",
      "args": ["--app", "Safari", "--annotate"],
      "comment": "Capture Safari window and build UI map"
    },
    {
      "command": "click",
      "args": ["--query", "address bar"],
      "comment": "Click on the address bar"
    },
    {
      "command": "sleep",
      "args": ["--duration", "500"],
      "comment": "Wait for focus"
    },
    {
      "command": "hotkey",
      "args": ["--keys", "cmd,a"],
      "comment": "Select all text"
    },
    {
      "command": "type",
      "args": ["--text", "Peekaboo MCP automation"],
      "comment": "Type search query"
    },
    {
      "command": "type",
      "args": ["--return"],
      "comment": "Press Enter to search"
    },
    {
      "command": "sleep",
      "args": ["--duration", "2000"],
      "comment": "Wait for results to load"
    },
    {
      "command": "see",
      "args": ["--app", "Safari"],
      "comment": "Capture search results"
    }
  ]
}