{
  "description": "Performs a simple calculation using the macOS Calculator app",
  "steps": [
    {
      "stepId": "capture-calculator",
      "command": "see",
      "params": {
        "app": "Calculator",
        "annotate": true
      },
      "comment": "Capture Calculator UI and create annotated screenshot"
    },
    {
      "stepId": "clear-calculator",
      "command": "click",
      "params": {
        "query": "Clear"
      },
      "comment": "Clear any existing calculation"
    },
    {
      "stepId": "click-9",
      "command": "click",
      "params": {
        "query": "9"
      },
      "comment": "Click number 9"
    },
    {
      "stepId": "click-multiply",
      "command": "click",
      "params": {
        "query": "Ã—"
      },
      "comment": "Click multiply"
    },
    {
      "stepId": "click-7",
      "command": "click",
      "params": {
        "query": "7"
      },
      "comment": "Click number 7"
    },
    {
      "stepId": "click-equals",
      "command": "click",
      "params": {
        "query": "="
      },
      "comment": "Click equals"
    },
    {
      "stepId": "wait-for-result",
      "command": "sleep",
      "params": {
        "duration": 1000
      },
      "comment": "Pause to see result"
    },
    {
      "stepId": "capture-result",
      "command": "see",
      "params": {
        "app": "Calculator",
        "analyze": "What is the result shown in the calculator display?"
      },
      "comment": "Capture and analyze the result"
    }
  ]
}